{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "src",
        "paths": {
            "api/*": ["api/*"],
            "assets/*": ["assets/*"],
            "components/*": ["components/*"],
            "hooks/*": ["hooks/*"],
            "pages/*": ["pages/*"],
            "store/*": ["store/*"],
            "types/*": ["types/*"],
            "utils/*": ["utils/*"],
            "router/*": ["router/*"],
            "shared/*": ["shared/*"],
            "ace-builds": ["node_modules/ace-builds/src-noconflict/*"],
            "react-router-dom": ["node_modules/react-router-dom"],
            "react-router": ["node_modules/react-router"],
            "redux": ["node_modules/redux"],
            "@reduxjs/toolkit": ["node_modules/@reduxjs/toolkit"],
            "antd": ["node_modules/antd"],
            "@ant-design/icons": ["node_modules/@ant-design/icons"]
        }
    },
    "include": ["src/**/*"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
